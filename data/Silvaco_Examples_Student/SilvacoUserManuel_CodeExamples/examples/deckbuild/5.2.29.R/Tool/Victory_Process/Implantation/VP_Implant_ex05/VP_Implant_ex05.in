# Analytical vs Monte Carlo Implantation

# Required Modules
#  Victory Process:
#   -2D Diffusion & Implantation

# Example Name
SET name=VP_Implant_ex05

############ PROCESS SIMULATION ###########################
# Analytical Implantation

GO victoryprocess simflags="-P 4"

INIT material=silicon depth=1.2 gasheight=0.3 resolution=0.05 meshdepth=2

#setting volume mesh using Line statements to get accurate doping profile
LINE z location=0 spacing=0.001
LINE z location=0.5 spacing=0.01
LINE z location=1.2 spacing=0.1

#Analytical implant of arsenic in Silicon using Analytical model
IMPLANT arsenic energy=90 dose=5e13 tilt=7 rotation=20

EXPORT name=$"name"_analytical

# Monte Carlo Implantation
GO victoryprocess simflags="-P 4"

INIT material=silicon depth=1.2 gasheight=0.3 resolution=0.05 meshdepth=2

#setting volume mesh using Line statements to get accurate doping profile
LINE z location=0 spacing=0.001
LINE z location=0.5 spacing=0.01
LINE z location=1.2 spacing=0.1

SET nions=100000
#Monte Carlo (bca) implant of arsenic in Silicon 
IMPLANT arsenic energy=90 dose=5e13 tilt=7 rotation=20 \
bca n.ions=$nions

EXPORT name=$"name"_MC

victoryvisual \
$"name"_analytical.str:$"name".set+\
$"name"_MC.str:$"name".set

QUIT
